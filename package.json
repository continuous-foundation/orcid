{
  "name": "orcid",
  "version": "0.0.1",
  "description": "Utilities for working with ORCID identifiers and service.",
  "keywords": [
    "Open Science",
    "ORCID"
  ],
  "author": "Rowan Cockett <rowan@curvenote.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/curvenote/orcid",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curvenote/orcid.git"
  },
  "bugs": {
    "url": "https://github.com/curvenote/orcid/issues"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint \"src/**/*.ts\" -c .eslintrc.js --max-warnings 1",
    "lint:format": "prettier --check src/*.ts src/**/*.ts",
    "build:esm": "tsc --module es2015   --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "declarations": "tsc --declaration --emitDeclarationOnly --declarationMap --outDir dist/types",
    "build": "npm-run-all -l clean -p build:cjs build:esm declarations",
    "prepublishOnly": "npm run build && npm run test"
  },
  "devDependencies": {
    "@types/jest": "^29.2.3",
    "chalk": "^4.1.2",
    "eslint": "^8.21.0",
    "eslint-config-curvenote": "latest",
    "jest": "28.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.9.3"
  }
}
